@model NeuropsychInventory.ViewModels.TakeInventoryVM

@{
    ViewBag.Title = "TakeInventory";
}
<table>
    @foreach (var item in Model.Tests)
    {
        <tr>
            <td>@Html.ActionLink(@item.TestName, "TakeItemInventory", new { inventoryId = Model.InventoryId, testId = item.Id })</td>
            <td>
                @if (item.IsComplete == true) {
                    <img src="~/Images/greencheck.png" />
                }
                else {
                    <img src="~/Images/red_x.gif" />
                }
            </td>
        </tr>
    }
</table>


<p />
@Html.ActionLink("Conclude", "ConcludeInventory")
<p />
@Html.ActionLink("Back to List", "Index")