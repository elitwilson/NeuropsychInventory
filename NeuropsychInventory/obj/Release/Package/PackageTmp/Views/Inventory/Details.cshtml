@model NeuropsychInventory.Models.Inventory

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<h3>@Model.Date.ToShortDateString()</h3>

<table>
    <thead>
        <tr>
            <th>Test</th>
            <th>Product</th>
            <th>Product #</th>
            <th>In Stock</th>
            <th>Ideal #</th>
        </tr>
    </thead>
    @foreach (var item in Model.InventoryItems)
    {
        <tr>
            <td>@item.Product.Test.Abbreviation</td>
            <td>@item.Product.Name</td>
            <td>@item.Product.ProductNumber</td>
            <td>@item.Quantity</td>
            <td>@item.Product.MaxInStock</td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
